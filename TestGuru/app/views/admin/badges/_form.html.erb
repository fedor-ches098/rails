<%= form_with model: [:admin, @badge], local: true do |form| %>

  <%= render 'shared/errors', resource: @badge %>
  
  <p>
    <%= form.label :name %>
    <%= form.text_field :title, id: :badge_name, placeholder: 'Name' %>
  </p>

  <p>
    <%= form.label :rule %>
    <%= form.text_field :rule, id: :badge_rule %>
  </p>

  <p>
    <%= form.label :value %>
    <%= form.text_field :value, id: :badge_value %>
  </p>

  <p>
    <%= form.label :image_url %>
    <%= form.url_field :image_url, id: :badge_image_url %>
  </p>
  <p><%= form.submit %></p>
<% end %>
