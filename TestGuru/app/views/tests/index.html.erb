<div class="card">
  <div class="card-header">
    <h1><%= t(".header") %></h1>
  </div>
  <div class="card-body">
    <% if @tests.present? %>
      <table>
        <tr>
          <th class="sort-by-title pointer">
            <%= t(".title") %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th><%= t(".level") %></th>
          <th><%= t(".questions") %></th>
          <th><%= t(".timer") %></th>
          <th><%= t(".actions") %></th>
        </tr>

        <%= render @tests %>

      </table>
    <% else %>
      <p><%= t('.no_tests_available') %></p>
    <% end %>
  </div>
</div>
